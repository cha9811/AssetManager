<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ASSET_MAPPER">

	<select id="GET_ASSET_LIST" resultType="AssetVO">
		select * from assets where asset_deleted=1
	</select>

	<select id="GET_ASSET_LIST_BY_SOFT_DELETE" resultType="AssetVO">
		select * from assets where asset_deleted=0
	</select>
	
	<select id="GET_ASSET_ONE" parameterType="int" resultType="AssetVO">
		select * from assets
		where main_id = #{main_id}
	</select>

	<insert id="CREATE_ASSET_ONE" parameterType="AssetVO">
		insert into assets
		(main_title,main_content,main_category,main_reward,main_limit,main_start_time,main_end_time,use_time,member_name)
		values
		(#{main_title},#{main_content},#{main_category},#{main_reward},#{main_limit},#{main_start_time},#{main_end_time},#{use_time},#{member_name})
	</insert>	
	
	<delete id="DELETE_ASSET_ONE" parameterType="int">
		delete from assets
		where
		main_id = #{main_id}
	</delete>


</mapper>










